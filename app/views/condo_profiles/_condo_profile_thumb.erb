<style>
  .picture-frame:hover {
    box-shadow: 0px 0px 6px 1px rgb(228, 228, 228);
  }
</style>

<%= link_to condo_profile_path(condo) do %>
  <div class="picture-frame">


    <div class="listing_sold_label"></div>



    <% unless condo.photos.where(main_photo: true).blank? %>
      <img src="<%= condo.photos.where(main_photo: true).first.image_url(:thumb) %>" alt="img" class="listing_picture" />
    <% else %>
      <div class="no_listing_picture">
        No Photo Available
      </div>
    <% end %>


      <div class="listing_status">
        
      </div>

    <div class="listing_address">

    </div>
  </div>

<% end %>