<h1>Listings</h1>

<div class="well well-large">
  


      <%= search_form_for @search do |f| %>
        <div class="row">
          <div class="form-group">
              <div class="col-lg-2">
                <%= f.label :address_cont, "Street name contains" %>
              </div>
              <div class="col-lg-2">
                <%= f.text_field :address_cont, class: 'form-control input-small' %>
              </div>

              <div class="col-lg-2">
                <%= f.label :sold_eq, "Listing status" %>
              </div>
              <div class="col-lg-2">

                <%= f.select :sold_eq, options_for_select([["Listed", "false"], ["Sold", "true"]], (params[:q].nil? ? "" : params[:q][:sold_eq])), include_blank: true %>
             
              </div>
              <div class="col-lg-2">
                <div class="form-group">
                  <%= f.submit "Search", class: 'btn btn-success' %>
                </div>
              </div>
          </div>
        </div>




           


      <% end %>




</div>


<% if @listings.blank? %>

  <div class="alert alert-info">
    There are no listings. Create a new listing by clicking on <strong>Manage Listings</strong> and then <strong>Create new listing</strong>

  </div>
<% else %>
  <div style="display:table; margin:0 auto;">
    <%= paginate @listings %>
  </div>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Address</th>
        <th>Posted on:</th>
        <th>Last updated:</th>
        <th style="width:220px;">Take Action</th>
      </tr>
    </thead>

    <tbody>
      <% @listings.each do |listing| %>
        <tr>
          <td>
            <%= link_to listing do %>
              <%= listing.street_number %> <%= listing.address %>, <%= "Unit #{listing.unit_number}," unless listing.unit_number.blank? %> <%= listing.city_province %>
            <% end %>


         
          </td>
          <td>
            <%= listing.created_at.to_formatted_s(:long)  %>
          </td>
          <td>
            <%= listing.updated_at.to_formatted_s(:long)  %>
          </td>
          <td>
            <%= link_to 'Edit Listing', edit_listing_path(listing), class:'btn btn-primary btn-small' %>
            <%= link_to 'Delete Listing', listing, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger btn-small' %>
          </td>
        </tr>
      <% end %>



    </tbody>
  </table>

<% end %>

