<script>
  $(document).ready(function() {
    $("input[name='listing[category_id]']:radio").change( function() {


      


      //Home selected
      if ($(this).val() == 1) {
        $("#listing_unit_number").parent().hide();
        $("#listing_hide_unit_number").parent().hide();
        $("#listing_lot_frontage").parent().show();
        $("#listing_lot_depth").parent().show();
        $("#listing_maintenance_fee").parent().hide();


      }
      //Condo selected
      else if ($(this).val() == 2) {
        $("#listing_unit_number").parent().show();
        $("#listing_hide_unit_number").parent().show();
        $("#listing_lot_frontage").parent().hide();
        $("#listing_lot_depth").parent().hide();
        $("#listing_maintenance_fee").parent().show();
      }
      //Commercial selected
      else {
        $("#listing_unit_number").parent().show();
        $("#listing_hide_unit_number").parent().show();
        $("#listing_lot_frontage").parent().show();
        $("#listing_lot_depth").parent().show();
         $("#listing_maintenance_fee").parent().show();
      }
    });


    $("#general_tab_button").click(function() {
      if (!$("#general_tab_button").hasClass("active")) {
        
        $(".nav-tabs li").removeClass("active");

        $("#general_tab_button").addClass("active");

        $("#photos_tab").slideUp();
        $("#files_tab").slideUp();
        $("#general_tab").slideDown();
      }
    }); 


    $("#photos_tab_button").click(function() {
      if (!$("#photos_tab_button").hasClass("active")) {
        $(".nav-tabs li").removeClass("active");

        $("#photos_tab_button").addClass("active");
        
        $("#photos_tab").slideDown();
        $("#general_tab").slideUp();
        $("#files_tab").slideUp();
      }
    }); 

    $("#files_tab_button").click(function() {
      if (!$("#files_tab_button").hasClass("active")) {
        $(".nav-tabs li").removeClass("active");
        
        $("#files_tab_button").addClass("active");
        
        $("#photos_tab").slideUp();
        $("#general_tab").slideUp();
        $("#files_tab").slideDown();
      }
    }); 



  });
</script>

<style>
  #main_photo {
    border:1px solid black;
    width:235px;
    height:170px;
  }
  #form_fields {
    display:block;
  }

  .edit_listing input[type="password"], .edit_listing input[type="text"], .edit_listing input[type="number"] {
    width: 250px;
  }
  .form-group > label {
    width:120px;
  }
  #photos_tab {
    display:none;
  }
</style>


<ul class="nav nav-tabs">
  <li id="general_tab_button" class="active"><a href="#">General</a></li>
  <li id="photos_tab_button" ><a href="#">Photos</a></li>
  <li id="files_tab_button" ><a href="#">Floorplan and Featuresheet</a></li>
</ul>

<div class="well well-large">
  <%= form_for @listing, :html => {multipart: true} do |f| %>

    <div id="general_tab">
        <%= f.hidden_field :draft, value: "false" %>
        <% if @listing.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

            <ul>
            <% @listing.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <span style="font-weight:bold;">Select listing type:</span> 
          <% Category.all.each do |cat| %>
            <%= f.radio_button :category_id, cat.id %>
            <%= cat.name %>
          <% end %>
        </div>

        <div class="row">
          <div class="col-lg-6">

              <div class="form-group">
                <%= f.label :active, "Enable listing" %>

                <div class="make-switch" data-on-label="Yes" data-off-label="No" data-off="danger" data-on="success" style="margin-right:25px;">
                   <%= f.check_box :active %> 
                </div> 
              </div>

              <div class="form-group">
                <%= f.label :sold, "Listing status" %>

                <div class="make-switch" data-on-label="Sold" data-off-label="Listed" data-off="warning" data-on="info">
                   <%= f.check_box :sold %> 
                </div>
              </div>

              <div class="form-group">
                <%= f.label :sold_price %>
                <%= f.text_field :sold_price, class: 'form-control input-small', style:'display:inline-block' %>
                <div class="make-switch" data-on-label="Show" data-off-label="Hide">
                   <%= f.check_box :show_sold_price %> 
                </div>
              </div>
              <div class="form-group">
                <%= f.label :sold_label %>
                <%= f.text_field :sold_status, class: 'form-control input-small', style:'display:inline-block' %>
              </div>
              <div class="form-group">
                <%= f.label :price %>
                <%= f.text_field :price, class: 'form-control input-small', style:'display:inline-block' %>
              </div>
              <div class="form-group">
                <%= f.label :street_number %>
                <%= f.text_field :street_number, class: 'form-control input-small', style:'display:inline-block' %>
                <div class="make-switch" data-on-label="Show" data-off-label="Hide">
                   <%= f.check_box :show_street_number %> 
                </div>
              </div>
              <div class="form-group">
                <%= f.label :unit_number %>
                <%= f.text_field :unit_number, class: 'form-control input-small', style:'display:inline-block' %>
                <div class="make-switch" data-on-label="Show" data-off-label="Hide">
                   <%= f.check_box :show_unit_number %> 
                </div>
              </div>
              <div class="form-group">
                <%= f.label :address %>
                <%= f.text_field :address, class: 'form-control input-small', style:'display:inline-block' %>
              </div>
              <div class="form-group">
                <%= f.label :postal_code %>
                <%= f.text_field :postal_code, class: 'form-control input-small', style:'display:inline-block' %>
              </div>
              <div class="form-group">
                <%= f.label :neighbourhood %>
                <%= f.text_field :neighbourhood, class: 'form-control input-small', style:'display:inline-block' %>
              </div>
              <div class="form-group">
                <%= f.label :lot_frontage %>
                <%= f.number_field :lot_frontage, class: 'form-control input-small', style:'display:inline-block' %>
              </div>
              <div class="form-group">
                <%= f.label :lot_depth %>
                <%= f.number_field :lot_depth, class: 'form-control input-small', style:'display:inline-block' %>
              </div>

              <div class="form-group">
                <%= f.label :floor_plan %>
                <%= f.fields_for :floor_plan do |floor_plan| %>
                  <%= floor_plan.file_field :file, style: 'display:inline-block' %>
                <% end %>
              </div>

              <div class="form-group">
                <%= f.label :feature_sheet %>
                <%= f.fields_for :feature_sheet do |feature_sheet| %>
                  <%= feature_sheet.file_field :file, style: 'display:inline-block' %>
                <% end %>
              </div>
          </div>

          <div class="col-lg-6">
            <div class="form-group">
              <%= f.label :sqft %>
              <%= f.number_field :sqft, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :bedrooms %>
              <%= f.number_field :bedrooms, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :bathrooms %>
              <%= f.number_field :bathrooms, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :maintenance_fee %>
              <%= f.text_field :maintenance_fee, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :virtual_tour_url %>
              <%= f.text_field :virtual_tour_url, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :map_url %>
              <%= f.text_field :map_url, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :realtor_url %>
              <%= f.text_field :realtor_url, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :facebook_url %>
              <%= f.text_field :facebook_url, class: 'form-control input-small', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_area :description, class: 'form-control', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :inclusions %>
              <%= f.text_area :inclusions, class: 'form-control', style:'display:inline-block' %>
            </div>
            <div class="form-group">
              <%= f.label :exclusions %>
              <%= f.text_area :exclusions, class: 'form-control', style:'display:inline-block' %>
            </div>


          </div>
        </div>

        

    </div>

    <div class="clearfix">
        <div class="actions pull-right" style="display:inline-block; margin-left:15px;">
          <%= f.submit @listing.draft ? "Create Listing" : nil, class: 'btn btn-success' %>
        </div>
        <%= link_to 'Cancel', listings_path, class:'btn btn-danger pull-right' %>
    </div>
     
  <% end %>

  <div id="photos_tab" class="clearfix">

    <%= form_for Photo.new, :html => {multipart: true} do |f| %>
      <div class="form-group">
        <%= f.label :photos %>
        <%= f.hidden_field :listing_id, value: @listing.id %>
        <%= f.file_field :image, multiple: true, name:'photo[image]', style: 'display:inline-block' %>
        
      </div>


    <% end %> 

    
    
    <div class="alert alert-info">
      <span>Drag and drop photos anywhere on the document to upload</span>
    </div>
    <div id="progress_bars"></div>


    <%= form_for :photo, url: delete_multiple_photos_path, :html => {method: 'get'}, remote: true do |f| %>
      <%= f.hidden_field :listing_id, value: @listing.id %>
      <%= submit_tag "Delete selected photos", data: { disable_with: "Please wait..." }, class: 'btn' %>


      <div id="photos">
        <div class="row">
            <%= render @photos %> 
        </div>
      </div>

    <% end %> 

  </div>



  <div id="files_tab" class="clearfix">
    files
  </div>
</div>


<script id="template-upload" type="text/x-tmpl">
  <div class="upload">
    {%=o.name%}
      <div class="progress progress-striped active">
        <div class="progress-bar progress-bar-info" style="width: 0%"></div>
      </div>
  </div>
</script>